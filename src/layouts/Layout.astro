---
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta
      name="description"
      content="Streamline your restaurant operations with our comprehensive Smart Ecosystem. We offer Food Ordering through our Smart QR, POS integration, Online Billing, Campaign, Inventory Management and efficient Workforce Management solutions. Simplify the way you run your restaurant and enhance customer experience. Order Online through our Smart QR and optimize your restaurant's efficiency, Boost your Sales with our cutting-edge technology."
    />

    <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" defer></script>
    <script>
      window.OneSignal = window.OneSignal || [];
      OneSignal.push(function () {
        OneSignal.init({
          appId: "4067850e-92ee-401c-aea0-4329c29bca37",
        });
      });
    </script>

    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.register("/service-worker.js").then(
          function (registration) {
            console.log(
              "Service Worker registration successful with scope: ",
              registration.scope
            );
          },
          function (err) {
            console.log("Service Worker registration failed: ", err);
          }
        );
      }
    </script>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  body {
    width: 100%;
    height: 100vh;
    margin: 0;
    font-family: "Poppins", sans-serif;
    color: white;
    background: #13151f;
  }
</style>
