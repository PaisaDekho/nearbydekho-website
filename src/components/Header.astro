<header class="">
	<div class="logo-container">
		<img src="/logo.png" />
		<h2>Nearby Dekho</h2>
	</div>
	<nav>
		<li><a href="/">Home</a></li>
		<li>About us</li>
		<li><a href="/contact-us">Contact us</a></li>
		<li><a href="/partner-with-us">Partner With Us</a></li>
	</nav>

	<div class="mobile_menu">
		<div class="menu-toggle">
			<img src="/menu.png" />
		</div>
		<nav class="mobile-nav">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="icon"
				id="menu-close"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M6 18L18 6M6 6l12 12"></path>
			</svg>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/about-us">About us</a></li>
				<li><a href="/contact-us">Contact us</a></li>
				<li><a href="/partner-with-us">Parnter With us</a></li>
			</ul>
		</nav>
	</div>
</header>

<style>
	header {
		height: 30px;
		width: 90%;
		margin: 40px auto;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		justify-items: flex-end;
	}

	.icon {
		width: 30px;
		height: 30px;
		position: relative;
		right: -85%;
	}

	.logo-container {
		display: flex;
		align-items: center;
	}
	.logo-container img {
		width: 70px;
	}

	header h2 {
		font-size: max(2rem, 1.2rem);
		margin: 0 20px;
		white-space: nowrap;
	}

	header nav {
		display: flex;
		align-items: center;
	}

	.mobile_menu {
		display: grid;
		align-items: end;
	}

	.menu-toggle img {
		width: 35px;
	}

	.mobile-nav {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(0deg, #13151f 50%, #ff0060 230%, #ff4745 00%);
		z-index: 999;
		color: white;
		padding-top: 30px;
		overflow-y: auto;
	}

	.mobile-nav ul {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.mobile-nav li {
		margin: 10px 0;
	}

	.mobile-nav a {
		color: #ccc2c2;
		font-size: 1.2rem;
		text-decoration: none;
	}

	@media screen and (max-width: 480px) {
		header {
			margin: 20px auto;
			grid-template-columns: repeat(2, 1fr);
			align-items: center;
		}

		header nav {
			display: none;
		}

		header h2 {
			font-size: 1rem;
			margin: 0 10px;
		}

		.logo-container img {
			width: 50px;
		}
		/* Show mobile menu when toggle is clicked */
		.mobile-nav.visible {
			display: block;
		}
	}

	nav li {
		list-style: none;
		margin-right: 2.5rem;
		cursor: pointer;
		white-space: nowrap;
	}

	nav li a {
		text-decoration: none;
		color: white;
	}

	nav li:hover {
		text-decoration: underline;
		text-underline-offset: 0.4em;
	}
</style>

<script>
	// Toggle mobile nav visibility on click
	const menuToggle = document.querySelector(".menu-toggle");
	const mobileNav = document.querySelector(".mobile-nav");
	menuToggle.addEventListener("click", () => {
		mobileNav.classList.toggle("visible");
	});

	const menuClose = document.querySelector("#menu-close");
	menuClose.addEventListener("click", () => {
		mobileNav.classList.toggle("visible");
	});
</script>
